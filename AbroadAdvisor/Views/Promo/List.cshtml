@using Bennett.AbroadAdvisor.Core;
@using Bennett.AbroadAdvisor.Models;

@model IEnumerable<PromoModel>

@{
    ViewBag.Title = "List";
}

@section Body {

    <div class="row">
        <div class="col-lg-8">
            <h1>Promos</h1>
        </div>
        <div class="col-lg-4 text-right">
            <a href="@Url.Action("Add", "Promo")"><i class="fa fa-plus-circle"></i> Create New Promo</a>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <p>
                Promos allow you to create student entry forms which talored
                for students to fill out. These pages do not require logging
                in. Please separate events into their own promos.
            </p>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-hover table-striped tablesorter table-condensed">
            <thead>
                <tr>
                    <th>Code <i class="fa fa-sort"></i></th>
                    <th>Creator <i class="fa fa-sort"></i></th>
                    <th>Created <i class="fa fa-sort"></i></th>
                    <th>Description <i class="fa fa-sort"></i></th>
                    <th>Students <i class="fa fa-sort"></i></th>
                    <th>Active <i class="fa fa-sort"></i></th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var promo in Model)
                {
                    <tr>
                        <td>@Html.ActionLink(promo.Code, "Info", new { id = promo.Id })</td>
                        <td>@promo.CreatedBy.FirstName @promo.CreatedBy.LastName</td>
                        <td>@DateTimeFilter.UtcToLocal(promo.Created)</td>
                        <td>@promo.Description</td>
                        <td>@(promo.Logs.Count<StudentPromoLog>().ToString("N0"))</td>
                        <td>
                            @if (promo.IsActive)
                            {
                                <i class="fa fa-check"></i>
                            }
                        </td>
                        <td></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
