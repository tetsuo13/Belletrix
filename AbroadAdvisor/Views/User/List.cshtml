@using Bennett.AbroadAdvisor.Models;

@model List<UserModel>

@{
    ViewBag.Title = "UserList";
}

@section Body {
    <div class="row">
        <div class="col-lg-8">
            <h1>Users <small>@Model.Count.ToString("N0") total</small></h1>
        </div>
        <div class="col-lg-4 text-right">
            <a href="@Url.Action("Add", "User")"><i class="fa fa-plus-circle"></i> Add User</a>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <ol class="breadcrumb">
                <li><a href="@Url.Action("Index", "Home")"><i class="fa fa-dashboard"></i> Dashboard</a></li>
                <li class="active"><i class="fa fa-users"></i> Students</li>
            </ol>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-hover table-striped tablesorter">
            <thead>
                <tr>
                    <th>Name <i class="fa fa-sort"></i></th>
                    <th>Email <i class="fa fa-sort"></i></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var student in Model)
                {
                    <tr>
                        <td>@student.LastName, @student.FirstName @student.MiddleName</td>
                        <td>
                            @if (String.IsNullOrEmpty(student.CampusEmail))
                            {
                                <text>&mdash;</text>
                            }
                            else
                            {
                                <a href="mailto:@student.CampusEmail">@student.CampusEmail</a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
