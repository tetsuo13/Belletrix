@using Bennett.AbroadAdvisor.Models;

@model StudentModel

@{
    ViewBag.Title = "Add";
}

@section Body {
    <div class="row">
        <div class="col-lg-12">
            <h1>Add Student</h1>
            <ol class="breadcrumb">
                <li><a href="@Url.Action("Index", "Home")"><i class="fa fa-dashboard"></i> Dashboard</a></li>
                <li><a href="@Url.Action("List", "Student")"><i class="fa fa-users"></i> Students</a></li>
                <li class="active"><i class="fa fa-edit"></i> Add Student</li>
            </ol>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-6">

            @using (Html.BeginForm("Add", "Student", FormMethod.Post, new { role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary()

                <div class="row">
                    <div class="col-lg-4">
                        <div class="form-group">
                            <label>Full Name</label>
                            @Html.TextBoxFor(s => s.FirstName, new {  @class = "form-control", placeholder = "First" })
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="form-group">
                            <label>&nbsp;</label>
                            @Html.TextBoxFor(s => s.MiddleName, new { @class = "form-control", placeholder = "Middle" })
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="form-group">
                            <label>&nbsp;</label>
                            @Html.TextBoxFor(s => s.LastName, new { @class = "form-control", placeholder = "Last" })
                        </div>
                    </div>
                </div>
                
                <div class="form-group">
                    @Html.LabelFor(s => s.CampusEmail)
                    @Html.TextBoxFor(s => s.CampusEmail, new { @class = "form-control" })
                </div>
                
                <div class="row">
                    <div class="col-lg-6">
                        <div class="form-group">
                            @Html.LabelFor(s => s.Classification)
                            @Html.TextBoxFor(s => s.Classification, new { @class = "form-control", placeholder = DateTime.Now.AddYears(-1).Year })
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group">
                            @Html.LabelFor(s => s.Classification)
                            @Html.TextBoxFor(s => s.Classification, new { @class = "form-control", placeholder = DateTime.Now.AddYears(3).Year })
                        </div>
                    </div>
                </div>
                
                <div class="form-group">
                    @Html.LabelFor(s => s.PhoneNumber)
                    @Html.TextBoxFor(s => s.PhoneNumber, new { @class = "form-control" })
                    @*<p class="help-block">Example block-level help text here.</p>*@
                </div>
                
                <div class="row">
                    <div class="col-lg-6">
                        <div class="form-group">
                            @Html.LabelFor(s => s.HasPassport)
                            <label class="checkbox-inline">
                                @Html.CheckBoxFor(s => s.HasPassport)
                            </label>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group">
                            @Html.LabelFor(s => s.Gpa)
                            @Html.TextBoxFor(s => s.Gpa, new { @class = "form-control" })
                        </div>
                    </div>
                </div>
                
                <button type="submit" class="btn btn-default">Add Student Profile</button>
            }
        </div>
    </div>
}
