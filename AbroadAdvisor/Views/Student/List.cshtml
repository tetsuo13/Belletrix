@using Bennett.AbroadAdvisor.Core;
@using Bennett.AbroadAdvisor.Models;

@model IList<StudentModel>

@{
    ViewBag.Title = "List";
}

@section FooterScript {
    <script>
        $(function () {
            'use strict';

            $('a.studentlisttooltop').tooltip();
            $('a.studentlistmodal').modal();

            // Load cached modal content and then refetch remote content.
            $(document.body).on('hidden.bs.modal', function () {
                $('#noteModal').removeData('bs.modal');
            });
        });
    </script>
}

@section Body {
    <div class="row">
        <div class="col-lg-8">
            <h1>Students <small>@Model.Count.ToString("N0") total</small></h1>
        </div>
        <div class="col-lg-4 text-right">
            <a href="@Url.Action("Add", "Student")"><i class="fa fa-plus-circle"></i> Add Student</a>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <ol class="breadcrumb">
                <li><a href="@Url.Action("Index", "Home")"><i class="fa fa-dashboard"></i> Dashboard</a></li>
                <li class="active"><i class="fa fa-users"></i> Students</li>
            </ol>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-hover table-striped tablesorter">
            <thead>
                <tr>
                    <th>Name <i class="fa fa-sort"></i></th>
                    <th>Email <i class="fa fa-sort"></i></th>
                    <th>Phone Number <i class="fa fa-sort"></i></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var student in Model)
                {
                    <tr>
                        <td>
                            <a href="@Url.Action("Edit", "Student", new { id = student.Id })">@student.LastName, @student.FirstName @student.MiddleName</a>
                        </td>
                        <td>
                            @if (String.IsNullOrEmpty(student.CampusEmail))
                            {
                                <text>&mdash;</text>
                            }
                            else
                            {
                                <a href="mailto:@student.CampusEmail">@student.CampusEmail</a>
                            }
                        </td>
                        <td>@Formatter.PhoneNumber(student.PhoneNumber)</td>
                        <td>
                            <a href="@Url.Action("List", "Note", new { studentId = student.Id })"
                               data-toggle="modal" data-target="#noteModal"
                               class="studentlisttooltop studentlistmodel" data-placement="top"
                               title="Notes"><i class="fa fa-book"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @* Student notes modal inserted here by Bootstrap JS. *@
    <div class="modal fade" id="noteModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true"></div>
}
