@using Bennett.AbroadAdvisor.Models;

@{
    ViewBag.Title = "Index";
}

@section Body {
    <div class="row">
        <div class="col-lg-4">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title"><i class="fa fa-clock-o"></i> Recent Activity</h3>
                </div>
                <div class="panel-body">
                    <div class="list-group">
                        @foreach (EventLogModel eventLog in ViewBag.RecentActivity)
                        {
                            string action = String.Empty;
                            string personName = String.Empty;
                            string iconClass = String.Empty;
                            
                            switch (eventLog.Type)
                            {
                                case (int)EventLogModel.EventType.AddStudent:
                                    action = "added";
                                    personName = eventLog.Student.FirstName + " " + eventLog.Student.LastName;
                                    iconClass = "fa fa-user";
                                    break;
                                    
                                case (int)EventLogModel.EventType.EditStudent:
                                    action = "modified";
                                    personName = eventLog.Student.FirstName + " " + eventLog.Student.LastName;
                                    iconClass = "fa fa-user";
                                    break;
                            }
                            
                            <a href="#" class="list-group-item">
                                <span class="badge" title="@eventLog.EventDate.ToShortDateString() @eventLog.EventDate.ToShortTimeString()">@eventLog.RelativeDate</span>
                                <i class="@iconClass"></i> @eventLog.ModifiedBy.FirstName @action @personName
                            </a>
                        }
