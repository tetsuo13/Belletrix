@using Belletrix.Entity.ViewModel;

@model ActivityLogCreateViewModel

@{
    ViewBag.Title = "Create";
    HtmlHelper.ClientValidationEnabled = true;
    HtmlHelper.UnobtrusiveJavaScriptEnabled = true;
}

@section FooterScript {
    <script>
        $(function () {
            Belletrix.ActivityLog.init('@Url.Action("AddPerson", new { guid = Request.Params["guid"] })');
        });
    </script>
}

@section Body {
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Add Activity</h1>
        </div>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.Partial("EditFieldsPartial")

        <div class="row">
            <div class="col-lg-12">
                <button type="submit" class="btn btn-default">Add Activity</button>
            </div>
        </div>
    }

    <div class="modal fade" id="personModal" tabindex="-1" role="dialog" aria-labelledby="personModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
            </div>
        </div>
    </div>
}
