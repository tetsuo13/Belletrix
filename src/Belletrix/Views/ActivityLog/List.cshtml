@using Belletrix.Entity.Enum;
@using Belletrix.Entity.Model;

@model IEnumerable<ActivityLogModel>

@{
    ViewBag.Title = "List";
}

@helper DisplayTypeLabels(IEnumerable<int> types)
{
    if (types.Contains((int)ActivityLogTypes.Conference))
    {
        <span class="label label-default">@ActivityLogTypes.Conference</span>
    }
    if (types.Contains((int)ActivityLogTypes.Institute))
    {
        <span class="label label-primary">@ActivityLogTypes.Institute</span>
    }
    if (types.Contains((int)ActivityLogTypes.Summit))
    {
        <span class="label label-success">@ActivityLogTypes.Summit</span>
    }
    if (types.Contains((int)ActivityLogTypes.Grant))
    {
        <span class="label label-info">@ActivityLogTypes.Grant</span>
    }
    if (types.Contains((int)ActivityLogTypes.Community))
    {
        <span class="label label-warning">@ActivityLogTypes.Community</span>
    }
    if (types.Contains((int)ActivityLogTypes.Student))
    {
        <span class="label label-danger">@ActivityLogTypes.Student</span>
    }
    if (types.Contains((int)ActivityLogTypes.SiteVisit))
    {
        <span class="label label-default">@ActivityLogTypes.SiteVisit</span>
    }
}

@section FooterScript {
    <script>
        $(function () {
            'use strict';
            $('#activitylist').dataTable({
                columns: [
                    null,
                    null,
                    null,
                    null,
                    { orderable: false }
                ]
            });
        });
    </script>
}

@section Body {
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Activities Logged
                <small>@Model.Count().ToString("N0") total</small>
                <small>
                    <span class="pull-right small">
                        <a href="@Url.Action("Add", "ActivityLog")"><i class="fa fa-plus-circle fa-fw"></i> Add Activity</a>
                    </span>
                </small>
            </h1>
        </div>
    </div>

    <br />

    <div class="row">
        <div class="col-lg-12">
            <table id="activitylist" class="table table-bordered table-hover table-striped tablesorter table-condensed">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Organizers</th>
                        <th>Dates</th>
                        <th>Types</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (ActivityLogModel activity in Model)
                    {
                        <tr>
                            <td>@Html.ActionLink(activity.Title, "View", new { id = activity.Id })</td>
                            <td>@activity.Organizers</td>
                            <td>
                                @if (activity.StartDate.Date == activity.EndDate.Date)
                                {
                                    @activity.StartDate.ToShortDateString()
                                }
                                else
                                {
                                    @activity.StartDate.ToShortDateString()
                                    @:-
                                    @activity.EndDate.ToShortDateString()
                                }
                            </td>
                            <td>@DisplayTypeLabels(activity.Types)</td>
                            <td>
                                <div class="btn-group">
                                    <a href="@Url.Action("Edit", "ActivityLog", new { id = activity.Id })"
                                       class="btn btn-xs btn-info" data-placement="top"
                                       title="Edit"><i class="fa fa-pencil fa-fw"></i></a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
