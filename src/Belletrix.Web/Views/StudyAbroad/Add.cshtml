@using Belletrix.Entity.ViewModel;

@model AddStudyAbroadViewModel

@{
    ViewBag.Title = "Add";
    HtmlHelper.ClientValidationEnabled = true;
    HtmlHelper.UnobtrusiveJavaScriptEnabled = true;
}

@section FooterScript {
    <script>
        $(function () {
            new Belletrix.StudyAbroad().initAdd();
        });
    </script>
}

@section Body {
    <div class="row">
        <div class="col-lg-12">
            <h1>Create Experience for @ViewBag.Student.FirstName @ViewBag.Student.LastName</h1>
            <ol class="breadcrumb">
                <li><a href="@Url.Action("List", "Student")"><i class="glyphicon glyphicon-user"></i> Students</a></li>
                <li><a href="@Url.Action("Edit", "Student", new { Id = ViewBag.Student.Id })"><i class="glyphicon glyphicon-user"></i> @ViewBag.Student.FirstName @ViewBag.Student.LastName</a></li>
                <li class="active"><i class="glyphicon glyphicon-pencil"></i> Create Experience</li>
            </ol>
        </div>
    </div>

    @using (Html.BeginForm(null, null, FormMethod.Post, new { role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        @Html.Hidden("StudentId", (int)ViewBag.Student.Id)

        <div class="row">
            <div class="col-lg-6">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h3 class="panel-title">Destination</h3>
                    </div>

                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-6">
                                @Html.LabelFor(s => s.CountryId)
                                @Html.DropDownListFor(s => s.CountryId, ViewBag.Countries as SelectList, "Please Select", new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.CountryId)
                            </div>
                            <div class="col-lg-6">
                                @Html.LabelFor(s => s.City) <i>(Optional)</i>
                                @Html.TextBoxFor(s => s.City, new { @class = "form-control "})
                                @Html.ValidationMessageFor(x => x.City)
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-6">
                                @Html.LabelFor(s => s.Year)
                                @Html.DropDownListFor(s => s.Year, ViewBag.Years as SelectList, "Please Select", new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.Year)
                            </div>
                            <div class="col-lg-6">
                                @Html.LabelFor(s => s.Semester)
                                @Html.DropDownListFor(s => s.Semester, new SelectList(ViewBag.Semesters, "Id", "Name"), "Please Select", new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.Semester)
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-6">
                                @Html.LabelFor(s => s.StartDate) <i>(Optional)</i>
                                @Html.TextBoxFor(s => s.StartDate, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.StartDate)
                            </div>
                            <div class="col-lg-6">
                                @Html.LabelFor(s => s.EndDate) <i>(Optional)</i>
                                @Html.TextBoxFor(s => s.EndDate, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.EndDate)
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h3 class="panel-title">Details</h3>
                    </div>

                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    @Html.LabelFor(s => s.CreditBearing)
                                    @Html.DropDownListFor(s => s.CreditBearing, new SelectList(
                                        new[]
                                        {
                                            new { Value = false, Text = "No" },
                                            new { Value = true, Text = "Yes" }
                                        },
                                        "Value",
                                        "Text",
                                        Model), "Please Select", new { @class = "form-control" })
                                    @Html.ValidationMessageFor(x => x.CreditBearing)
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    @Html.LabelFor(s => s.Internship)
                                    @Html.DropDownListFor(s => s.Internship, new SelectList(
                                        new[]
                                        {
                                            new { Value = false, Text = "No" },
                                            new { Value = true, Text = "Yes" }
                                        },
                                        "Value",
                                        "Text",
                                        Model), "Please Select", new { @class = "form-control" })
                                    @Html.ValidationMessageFor(x => x.Internship)
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-6">
                                @Html.LabelFor(s => s.ProgramId)
                                @Html.DropDownListFor(s => s.ProgramId, ViewBag.Programs as SelectList, "Please Select", new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.ProgramId)
                            </div>
                            <div class="col-lg-6">
                                @Html.LabelFor(s => s.ProgramTypes)
                                @Html.ListBoxFor(s => s.ProgramTypes, new MultiSelectList(ViewBag.ProgramTypes, "Id", "Name"), new { @class = "multiselect", multiple = "multiple" })
                                @Html.ValidationMessageFor(x => x.ProgramTypes)
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12 text-center">
                <button type="submit" class="btn btn-default">Add Experience</button>
                <a href="@Url.Action("Edit", "Student", new { Id = ViewBag.Student.Id })" class="btn btn-link" role="button">Cancel</a>
            </div>
        </div>
    }
}
