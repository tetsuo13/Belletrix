@using Belletrix.Entity.ViewModel;

@model PromoEditViewModel

@{
    ViewBag.Title = "Edit";
    HtmlHelper.ClientValidationEnabled = true;
    HtmlHelper.UnobtrusiveJavaScriptEnabled = true;
}

@section FooterScript {
    <script>
        $(function () {
            Belletrix.Common.singleSubmit();
        });
    </script>
}

@section Body {
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Edit Promo</h1>
        </div>
    </div>

    @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(x => x.Id)
        @Html.ValidationSummary()

        <div class="row">
            <div class="col-lg-8">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Details</h3>
                    </div>

                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    @Html.LabelFor(x => x.Description)
                                    @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(x => x.Description)
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Other</h3>
                    </div>

                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    @Html.LabelFor(x => x.Active)
                                    @Html.DropDownListFor(x => x.Active, new SelectList(
                                        new[]
                                        {
                                            new { Value = true, Text = "Yes" },
                                            new { Value = false, Text = "No" }
                                        },
                                        "Value",
                                        "Text",
                                        Model), null, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <ul class="list-inline">
                    <li><button type="submit" class="btn btn-default">Save Changes</button></li>
                    <li>@Html.ActionLink("Cancel", "List")</li>
                </ul>
            </div>
        </div>
    }
}
