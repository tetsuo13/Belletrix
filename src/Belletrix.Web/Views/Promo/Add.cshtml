@using Belletrix.Entity.ViewModel;

@model PromoCreateViewModel

@{
    ViewBag.Title = "Add";
    HtmlHelper.ClientValidationEnabled = true;
    HtmlHelper.UnobtrusiveJavaScriptEnabled = true;
}

@section FooterScript {
    <script>
        $(function () {
            var promo = new Belletrix.Promo();
            promo.initAddForm('@Url.Action("CheckUniqueName")', '#Code', '#codecheckresult');
            Belletrix.Common.singleSubmit();
        });
    </script>
}

@section HeaderStyle {
    <style>
        .right-inner-addon {
            position: relative;
        }
            .right-inner-addon input {
                padding-right: 30px;
            }
            .right-inner-addon i {
                position: absolute;
                right: 0;
                padding: 12px 25px;
                pointer-events: none;
            }
    </style>
}

@section Body {
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Add Promo</h1>
        </div>
    </div>

    @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form", role = "form" }))
    {
        @Html.AntiForgeryToken()

        <div class="row">
            <div class="col-lg-8">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Details</h3>
                    </div>

                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group has-error has-feedback">
                                    @Html.LabelFor(x => x.Code)
                                    <span class="glyphicon glyphicon-question-sign text-primary" aria-hidden="true"
                                        data-toggle="tooltip" title="Unique code used as a password into the data entry form."></span>
                                    @Html.TextBoxFor(x => x.Code, new { @class = "form-control", autofocus = "autofocus" })
                                    <span class="glyphicon glyphicon-remove form-control-feedback" aria-hidden="true" id="codecheckresult"></span>
                                    @Html.ValidationMessageFor(x => x.Code)
                                </div>
                                <div class="form-group has-error">
                                    @Html.LabelFor(x => x.Description)
                                    @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(x => x.Description)
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Optional</h3>
                    </div>

                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    @Html.LabelFor(x => x.RequireCode)
                                    <span class="glyphicon glyphicon-question-sign text-primary" aria-hidden="true"
                                        data-toggle="tooltip" title="When disabled, allows users into the entry form without having to know the unique code."></span>
                                    @Html.DropDownListFor(x => x.RequireCode, new SelectList(
                                        new[]
                                        {
                                            new { Value = false, Text = "No" },
                                            new { Value = true, Text = "Yes" }
                                        },
                                        "Value",
                                        "Text",
                                        true), new { @class = "form-control" })
                                    @Html.ValidationMessageFor(x => x.RequireCode)
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <ul class="list-inline">
                    <li><button type="submit" class="btn btn-default disabled">Create Promo</button></li>
                    <li>@Html.ActionLink("Cancel", "List")</li>
                </ul>
            </div>
        </div>
    }
}
