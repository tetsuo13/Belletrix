@using Belletrix.Entity.ViewModel;

@model PromoCreateViewModel

@{
    ViewBag.Title = "Add";
    HtmlHelper.ClientValidationEnabled = true;
    HtmlHelper.UnobtrusiveJavaScriptEnabled = true;
}

@section FooterScript {
    <script>
        $(function () {
            var promo = new Belletrix.Promo();
            promo.initAddForm();
            Belletrix.Common.singleSubmit();
        });
    </script>
}

@section HeaderStyle {
    <style>
        .right-inner-addon {
            position: relative;
        }
            .right-inner-addon input {
                padding-right: 30px;
            }
            .right-inner-addon i {
                position: absolute;
                right: 0;
                padding: 12px 25px;
                pointer-events: none;
            }
    </style>
}

@section Body {
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Add Promo</h1>
        </div>
    </div>

    @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form", role = "form" }))
    {
        @Html.AntiForgeryToken()

        <div class="row">
            <div class="col-lg-8">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Details</h3>
                    </div>

                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group has-error">
                                    @Html.LabelFor(x => x.Description)
                                    @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(x => x.Description)
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4"></div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <ul class="list-inline">
                    <li><button type="submit" class="btn btn-default disabled">Create Promo</button></li>
                    <li>@Html.ActionLink("Cancel", "List")</li>
                </ul>
            </div>
        </div>
    }
}
