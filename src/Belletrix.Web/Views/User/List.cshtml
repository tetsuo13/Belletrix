@using Belletrix.Entity.Model;

@model IEnumerable<UserModel>

@{
    ViewBag.Title = "UserList";
}

@section FooterScript {
    <script>
        $(function () {
            new Belletrix.User().initUserList('#userlist', '@Url.Action("Delete", "User")', 'userid');
        });
    </script>
}

@section Body {
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Users
                <small>@Model.Count().ToString("N0") total</small>
                <small>
                    <span class="pull-right small">
                        <a href="@Url.Action("Add", "User")"><i class="glyphicon glyphicon-plus-sign"></i> Add User</a>
                    </span>
                </small>
            </h1>
        </div>
    </div>

    <br />

    <div class="row">
        <div class="col-lg-12">
            <table id="userlist" class="display table-condensed">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Login</th>
                        <th>Created</th>
                        <th>Last Login</th>
                        <th>Notes</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (UserModel user in Model)
                    {
                        <tr>
                            <td>
                                <a href="@Url.Action("Edit", "User", new { id = user.Id })">@user.FirstName @user.LastName</a>
                            </td>
                            <td>@user.Login</td>
                            <td>@user.Created</td>
                            <td>
                                @if (user.LastLogin != default(DateTime))
                                {
                                    @user.LastLogin
                                }
                            </td>
                            <td>
                                @if (user.IsActive)
                                {
                                    <span class="label label-primary">Active</span>
                                }
                                @if (user.IsAdmin)
                                {
                                    <span class="label label-warning">Admin</span>
                                }
                            </td>
                            <td>
                                @if (user.Id != ViewBag.CurrentUser.Id)
                                {
                                    <button type="button" class="btn btn-xs btn-danger user-list-delete"
                                        data-userid="@user.Id">
                                        <i class="glyphicon glyphicon-trash"></i>
                                    </button>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
